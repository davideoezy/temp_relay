[Unit]
Description=Python temp reader
After=multi-user.target

[Service]
Type = idle
ExecStart=/usr/bin/python3 -u /home/pi/git/temp_relay/heater_temp_reader/temp_reader.py
WorkingDirectory=/home/pi/git/temp_relay/heater_temp_reader
StandardOutput=inherit
StandardError=inherit
Restart=always
User=pi

[Install]
WantedBy=multi-user.target
